.single-post {
  background: #FFF;

  h1 {
    font-size: 3em;
    margin-bottom: 15px;
	}

	h5 {
    color: #999999;
	}
}

.post-content {
  color: #444444;
  padding-top: 10px;
}

.single-comment{
  margin-bottom: 20px;
  padding:20px;
  border: 1px solid #ccc;
  border-radius:10px;

  .info{
    font-size:12px;
    color:#999;
  }

  .content{
      
    font-size:16px;
    color:#333;
    margin-bottom:10px;
  }
}

.intro-header {
  background-image: url(<%= asset_path 'header.jpg' %>);
}

.site-heading {
  a {
    text-decoration: none;
    color: #fff;
  }
}